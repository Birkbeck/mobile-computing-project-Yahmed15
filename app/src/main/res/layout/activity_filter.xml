<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FilterActivity"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/filter"
            style="@style/TextAppearance.MaterialComponents.Headline6" />

        <!-- One MaterialCheckBox per category -->
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/checkBoxBreakfast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/category_breakfast" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/checkBoxBrunch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/category_brunch" />

        <!-- …repeat for Lunch, Dinner, Dessert, Other… -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="end">

            <Button
                android:id="@+id/btnClearFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/clear_filter" />

            <Button
                android:id="@+id/btnApplyFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/apply_filter" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>